<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="outdated_browser_notifier" translate="label" type="text" sortOrder="900"
                 showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Outdated Browser Notifier</label>
            <tab>anass_Touati_coder</tab>
            <resource>AnassTouatiCoder_OutdatedBrowserNotifier::anasstouaticoder_outdatedbrowserNotifier</resource>
            <group id="general" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label,comment" type="select" sortOrder="5" showInDefault="1"
                       showInWebsite="1" showInStore="1" canRestore="0">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[<strong style="color:red;">NOTE:</strong>
                    <p>To enable this functionally in front office, you choose Yes as value</p>]]>
                    </comment>
                </field>
                <field id="enabled_in_admin" translate="label,comment" type="select" sortOrder="5" showInDefault="1"
                       showInWebsite="0" showInStore="0" canRestore="0">
                    <label>Enable in Back office</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[<strong style="color:red;">NOTE:</strong>
                    <p>To enable this functionally in Back office, you must select default config scope then
                    choose Yes as value</p>]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
